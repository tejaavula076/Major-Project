<% layout("/layouts/boilerplate") %>
    <style>
        .filter {
            margin-top: 2rem;
            text-align: center;
            margin-right: 1.7rem;
            opacity: 0.5;

        }

        a {
            text-decoration: none;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }

        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .tax-info {
            display: none;

        }

        .tax-toggle {
            border: 1px solid rgb(201, 193, 193);
            border-radius: 0.8rem;
            height: 3.5rem;
            margin-top: 1.5rem;
            padding: 1rem;
            display: flex;
            align-items: center;
        }
    </style>

    <body>
        <div id="filters">
            <a href="/listings?category=All">
                <div class="filter">
                    <div> <i class="fa-solid fa-border-all"></i></div>
                    <p> All</p>
                </div>
            </a>
            <a href="/listings?category=Trending">
                <div class="filter">
                    <div> <i class="fa-solid fa-fire"></i></div>
                    <p> Trending</p>
                </div>
            </a>
            <a href="/listings?category=Rooms">
                <div class="filter">
                    <div> <i class="fa-solid fa-bed"></i></div>
                    <p> Rooms</p>
                </div>
            </a>
            <a href="/listings?category=Iconic cities">
                <div class="filter">
                    <div> <i class="fa-solid fa-mountain-city"></i></div>
                    <p> Iconic cities</p>
                </div>
            </a>
            <a href="/listings?category=Mountains">
                <div class="filter">
                    <div> <i class="fa-solid fa-mountain"></i></div>
                    <p> Mountains</p>
                </div>
            </a>
            <a href="/listings?category=Castles">
                <div class="filter">
                    <div> <i class="fa-brands fa-fort-awesome"></i></div>
                    <p> Castles</p>
                </div>
            </a>
            <a href="/listings?category=Amazing pool">
                <div class="filter">
                    <div> <i class="fa-solid fa-person-swimming"></i></div>
                    <p> Amazing Pool</p>
                </div>
            </a>
            <a href="/listings?category=Camping">
                <div class="filter">
                    <div> <i class="fa-solid fa-campground"></i></div>
                    <p> Camping</p>
                </div>
            </a>
            <a href="/listings?category=Farms">
                <div class="filter">
                    <div> <i class="fa-solid fa-cow"></i></div>
                    <p> Farms</p>
                </div>
            </a>
            <a href="/listings?category=Arctic">
                <div class="filter">
                    <div> <i class="fa-solid fa-snowflake"></i></div>
                    <p> Arctic</p>
                </div>
            </a>
            <a href="/listings?category=Domes">
                <div class="filter">
                    <div> <i class="fa-solid fa-igloo"></i></div>
                    <p> Domes</p>
                </div>
            </a>
            <div class="tax-toggle">
                <div class="form-check form-switch form-check-reverse">
                    <input class="form-check-input" type="checkbox" value="" id="checkNativeSwitch" switch>
                    <label class="form-check-label" for="checkNativeSwitch">
                        Display After Total Taxes
                    </label>
                </div>
            </div>
        </div>

        <!-- <h1>All Listings</h1> -->
        <!-- <form method="get" action="/listings/new">
            <button>Create New Listing</button>
        </form> -->

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <% for(let listing of allListings){ %>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image"
                            style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b>
                                <br>
                                &#x20B9;<%= listing.price !==null ? listing.price.toLocaleString("en-US"): 0 %> /night
                                    <i class="tax-info"> &nbsp;&nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>

    </body>
    <script>
        let taxSwitch = document.getElementById("checkNativeSwitch")
        taxSwitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for (let info of taxInfo) {
                if (info.style.display != "inline") {
                    info.style.display = "inline"
                } else {
                    info.style.display = null
                }

            }
            // console.log(taxInfo)
        })
    </script>